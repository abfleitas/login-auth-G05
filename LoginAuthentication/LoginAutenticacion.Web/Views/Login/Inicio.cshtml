@model LoginAutenticacion.Web.Models.UsuarioModel;

@{
    Layout = "_InicioLayout";
    ViewBag.Title = "Inicio de Sesión";
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert("@Html.Raw(TempData["SuccessMessage"])");
    </script>
}
@if (TempData["SuccessMessage"] != null)
{
<script>
    alert("@Html.Raw(TempData["SuccessMessage"])");
</script>
}
<div class="container" id="container">
    <div class="form-container sign-up">
        <form asp-action="RegistrarUsuario" method="post">
            <h1>Registrarme</h1>
            <input asp-for="Nombre" type="text" placeholder="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
            <input asp-for="Mail" type="email" placeholder="Email" />
            <span asp-validation-for="Mail" class="text-danger"></span>
            <input asp-for="Username" type="text" placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="Password" type="password" placeholder="Contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <button type="submit">Registrar</button>
        </form>
    </div>

    <div class="form-container sign-in">
        <form asp-action="LoginUsuario" method="post">
            <h1>Iniciar</h1>
            @if (!string.IsNullOrEmpty(ViewBag.EmailNotVerifiedMessage))
            {
                <span class="text-danger error-message" style="font-size: 1.2em;">@ViewBag.EmailNotVerifiedMessage</span>
                <a href="@ViewBag.EmailVerificationLink">¿Reenviar email para verificación?</a>
            }
            <span asp-validation-for="UserNotFound" class="text-danger error-message" style="font-size: 1.2em;"></span>
            <span asp-validation-for="InvalidPassword" class="text-danger error-message" style="font-size: 1.2em;"></span>
            <input asp-for="Username" type="text" placeholder="Username"/>
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="Password" type="password" placeholder="Contraseña"/>
            <span asp-validation-for="Password" class="text-danger"></span>
            <a href="#">Te olvidaste la contraseña?</a>
            <button>Iniciar sesion</button>
            <div class="social-icons">
                <a class="icon" href="@ViewBag.response"><img src="~/icon/google.png" />Iniciar con Google</a>
            </div>
        </form>
    </div>
    <div class="toggle-container">
        <div class="toggle">
            <div class="toggle-panel toggle-left">
                <h1>Bienvenido!</h1>
                <p>Ingresa tus datos para conocer mas!</p>
                <button class="hidden" id="login">Iniciar</button>
            </div>
            <div class="toggle-panel toggle-right">
                <h1>Hola amigo!</h1>
                <p>Registrate para conocer mas detalles de nuestro sitio web</p>
                <button class="hidden" id="register">Registrarme</button>
            </div>
        </div>
    </div>
</div>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script>
        alert("@ViewBag.ErrorMessage");
    </script>}
@if (!string.IsNullOrEmpty(ViewBag.Ok))
    {
        <script>
            alert("@ViewBag.Ok");
        </script>
    }
    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}