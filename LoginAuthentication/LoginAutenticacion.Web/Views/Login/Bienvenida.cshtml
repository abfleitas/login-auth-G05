@model Newtonsoft.Json.Linq.JObject
@{
    Layout = "_BienvenidaLayout";
    ViewBag.Title = "Bienvenido";
    var username = ViewBag.username;
    bool? esAdmin = ViewBag.esAdmin;
}

<div class="container welcome-container">
    <div class="welcome-message">
        @if (esAdmin.HasValue && esAdmin == true)
        {
            <a class="btn btn-outline-success boton-admin" asp-controller="Login" asp-action="Admin">Vista Admin</a>
        }
        <h1>¡Bienvenido @username!</h1>
        <p>Estamos encantados de tenerte de vuelta. Disfruta utilizando nuestra aplicación.</p>
        <img src="https://media.giphy.com/media/7YjvlYIMRDcYM/giphy.gif?cid=790b76118dtdbj1qqxgkvoo5qbqz3rnfv4l8xnb2kqqg74dk&ep=v1_gifs_search&rid=giphy.gif&ct=g" class="welcome-gif" alt="Un GIF de bienvenida">
        <a asp-action="Logout" class="button">Logout</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
